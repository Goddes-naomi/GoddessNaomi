  <script>
    let spamStarted = false;

    function checkAge() {
      const age = parseInt(document.getElementById('ageInput').value);
      if (age >= 18) {
        document.getElementById('ageQuestion').style.display = 'none';
        document.getElementById('agePrompt').style.display = 'block';
      } else {
        alert("You must be 18 or older to continue.");
      }
    }

    function startSpam() {
      if (spamStarted) return;
