    function postToX() {
      const text = encodeURIComponent("I received the link from Goddess @SpoilNaomi2D and I was completely hypnotized. I love when Goddess @SpoilNaomi2D drains my wallet. I now belong to her.");
      const url = `https://twitter.com/intent/tweet?text=${text}`;
